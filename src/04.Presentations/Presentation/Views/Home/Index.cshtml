    <!-- preloader css -->
    <link rel="stylesheet" href="~/Layouts/assets/css/preloader.min.css" type="text/css" />

    <!-- Bootstrap Css -->
    <link href="~/Layouts/assets/css/bootstrap-rtl.min.css" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/Layouts/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
