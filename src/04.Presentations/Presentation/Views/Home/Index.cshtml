    <link href="~/Layouts/assets/css/app-rtl.min.css" rel="stylesheet" type="text/css" />

    <style type="text/css">
        font-face {
            font-family: "iransans";
            src: url("../Layouts/style/fonts/IRANSansWeb_Light.woff2") format("woff2");
